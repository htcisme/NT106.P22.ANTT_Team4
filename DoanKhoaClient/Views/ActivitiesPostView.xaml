<Window
    x:Class="DoanKhoaClient.Views.ActivitiesPostView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DoanKhoaClient.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Light_ActivitiesPostView"
    Title="ActivitiesPostView"
    Width="1440"
    Height="1036"
    mc:Ignorable="d">
    <Window.Resources>
        <!--  Style cho sidebar button hover  -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#FFE2F5FF" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#B3E0F7" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid
        x:Name="ActivitiesPost_Background"
        Width="1440"
        Height="1022.8">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Offset="0.596" Color="#FFF6FCFF" />
                <GradientStop Offset="1" Color="#FFDBF3FF" />
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox
            x:Name="ActivitiesPost_tbSearch"
            Width="307"
            Height="50"
            Margin="370,41,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFDBF3FF"
            BorderBrush="{x:Null}"
            Text=""
            TextWrapping="Wrap" />
        <Border
            x:Name="ActivitiesPost_Dashboard"
            Width="288"
            Height="942"
            Margin="43,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            BorderBrush="Black"
            CornerRadius="10,10,10,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0.04" Color="#FFF6FCFF" />
                    <GradientStop Offset="0.46" Color="#FFDBF3FF" />
                    <GradientStop Offset="0.937" Color="#FF87ACCD" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Image
            x:Name="HomePage_iUsers"
            Grid.Column="1"
            Width="40"
            Height="40"
            Margin="1358,46,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/generic avatar.png" />
        <Image
            x:Name="HomePage_iNotifications"
            Width="40"
            Height="40"
            Margin="1297,46,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/light-notifications.png" />
        <Image
            x:Name="ThemeToggleButton"
            Width="40"
            Height="40"
            Margin="1236,46,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            MouseDown="ThemeToggleButton_MouseDown"
            Source="/Views/Images/dark.png" />
        <Image
            x:Name="HomePage_iSearch"
            Width="40"
            Height="40"
            Margin="628,46,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/search.png" />
        <Image
            x:Name="HomePage_iLogo"
            Width="112.38"
            Height="40"
            Margin="131,71,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/header.png" />
        <Button
            x:Name="SidebarHomeButton"
            Width="160"
            Height="30"
            Margin="102,203,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Transparent"
            BorderThickness="0"
            Click="SidebarHomeButton_Click"
            Cursor="Hand"
            Style="{StaticResource SidebarButtonStyle}">
            <StackPanel Orientation="Horizontal">
                <Image
                    x:Name="HomePage_iHome"
                    Width="30"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Views/Images/home.png" />
                <Label
                    x:Name="HomePage_lbHome"
                    Width="108"
                    Height="30"
                    Margin="30,0,0,0"
                    Padding="0,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Home"
                    FontFamily="Segoe UI"
                    FontSize="20"
                    FontWeight="Bold" />
            </StackPanel>
        </Button>
        <Button
            x:Name="SidebarChatButton"
            Width="160"
            Height="30"
            Margin="102,279,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Transparent"
            BorderThickness="0"
            Click="SidebarChatButton_Click"
            Cursor="Hand"
            Style="{StaticResource SidebarButtonStyle}">
            <StackPanel Orientation="Horizontal">
                <Image
                    x:Name="HomePage_iChat"
                    Width="30"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Views/Images/chat_bubble.png" />
                <Label
                    x:Name="HomePage_lbChat"
                    Width="108"
                    Height="30"
                    Margin="30,0,0,0"
                    Padding="0,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Chat"
                    FontFamily="Segoe UI"
                    FontSize="20"
                    FontWeight="Bold" />
            </StackPanel>
        </Button>
        <Button
            x:Name="SidebarActivitiesButton"
            Width="160"
            Height="30"
            Margin="102,354,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Transparent"
            BorderThickness="0"
            Click="SidebarActivitiesButton_Click"
            Cursor="Hand"
            IsEnabled="False"
            Style="{StaticResource SidebarButtonStyle}">
            <StackPanel Orientation="Horizontal">
                <Image
                    x:Name="HomePage_Activities"
                    Width="30"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Views/Images/active-activities.png" />
                <Label
                    x:Name="HomePage_lbActivities"
                    Width="108"
                    Height="30"
                    Margin="30,0,0,0"
                    Padding="0,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Activities"
                    FontFamily="Segoe UI"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#597CA2" />
            </StackPanel>
        </Button>
        <Button
            x:Name="SidebarMemberButton"
            Width="160"
            Height="30"
            Margin="102,432,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Transparent"
            BorderThickness="0"
            Click="SidebarMembersButton_Click"
            Cursor="Hand"
            Style="{StaticResource SidebarButtonStyle}">
            <StackPanel Orientation="Horizontal">
                <Image
                    x:Name="HomePage_Task_iMembers"
                    Width="30"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Views/Images/members.png" />
                <Label
                    x:Name="HomePage_lbMembers"
                    Width="108"
                    Height="30"
                    Margin="30,0,0,0"
                    Padding="0,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Members"
                    FontFamily="Segoe UI"
                    FontSize="20"
                    FontWeight="Bold" />
            </StackPanel>
        </Button>
        <Button
            x:Name="SidebarTaskButton"
            Width="160"
            Height="30"
            Margin="102,510,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Transparent"
            BorderThickness="0"
            Click="SidebarTasksButton_Click"
            Cursor="Hand"
            Style="{StaticResource SidebarButtonStyle}">
            <StackPanel Orientation="Horizontal">
                <Image
                    x:Name="HomePage_iTasks"
                    Width="30"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Views/Images/tasks.png" />
                <Label
                    x:Name="HomePage_lbTasks"
                    Width="108"
                    Height="30"
                    Margin="30,0,0,0"
                    Padding="0,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Tasks"
                    FontFamily="Segoe UI"
                    FontSize="20"
                    FontWeight="Bold" />
            </StackPanel>
        </Button>
        <Image
            x:Name="HomePage_iFacebook"
            Width="24"
            Height="24"
            Margin="175,926,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/facebook.png" />
        <Image
            x:Name="HomePage_iInstagram"
            Width="24"
            Height="24"
            Margin="135,926,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/instagram.png" />
        <Image
            x:Name="HomePage_iYoutube"
            Width="24"
            Height="24"
            Margin="215,926,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/youtube.png" />

        <!--  Nội dung bài đăng (Phần mới thêm)  -->
        <Border
            Width="1028"
            Height="850"
            Margin="370,125,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFDBF3FF"
            BorderBrush="{x:Null}"
            CornerRadius="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!--  Nút quay lại  -->
                    <Button
                        Width="120"
                        Height="36"
                        Margin="20,20,0,0"
                        HorizontalAlignment="Left"
                        Background="#FF597CA2"
                        BorderBrush="#FF304C69"
                        Click="BackButton_Click"
                        Content="Quay lại"
                        FontWeight="Bold"
                        Foreground="White">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5" />
                            </Style>
                        </Button.Resources>
                    </Button>

                    <!--  Tiêu đề bài đăng  -->
                    <TextBlock
                        Width="644"
                        Margin="0,30,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="#12305E"
                        Text="{Binding Title}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />

                    <!--  Ngày đăng  -->
                    <TextBlock
                        Margin="20,10,20,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontSize="14"
                        Foreground="#6c757d"
                        Text="{Binding Date, StringFormat='{}{0:dddd - dd/MM/yyyy}'}" />

                    <!--  Ảnh minh họa  -->
                    <Image
                        MaxWidth="500"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Source="{Binding ImgUrl}"
                        Stretch="Uniform" />

                    <!--  Nội dung bài viết  -->
                    <TextBlock
                        Margin="50,30,50,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="#12305E"
                        Text="{Binding Description}"
                        TextWrapping="Wrap" />

                    <!--  Separator  -->
                    <Rectangle
                        Height="1"
                        Margin="20,30,20,0"
                        VerticalAlignment="Top"
                        Fill="#FF042354" />

                    <!--  Comment section  -->
                    <StackPanel Margin="50,30,50,30" VerticalAlignment="Bottom">
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#042354"
                            Text="Bình luận" />
                        <!--  Comment 1 (demo)  -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Border
                                Grid.Column="0"
                                Width="40"
                                Height="40"
                                Background="#E6E6E6"
                                CornerRadius="20" />
                            <Border
                                Grid.Column="1"
                                Margin="10,0,00,0"
                                Padding="15,10"
                                Background="#EAF6FF"
                                CornerRadius="8">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,5"
                                        FontWeight="SemiBold"
                                        Foreground="#FF042354"
                                        Text="Đỗ Quang Trung" />
                                    <TextBlock Margin="0,0,0,5" Text="Cmt đầu" />
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Cursor="Hand"
                                            Foreground="#0E4C92"
                                            Text="Thích" />
                                        <TextBlock
                                            Margin="15,0,0,0"
                                            Cursor="Hand"
                                            Foreground="#0E4C92"
                                            Text="Phản hồi" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            <StackPanel
                                Grid.Column="2"
                                Margin="10,0,0,0"
                                Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Top"
                                    Cursor="Hand"
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Text="..." />
                            </StackPanel>
                        </Grid>
                        <!--  Comment input  -->
                        <Grid Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border
                                Grid.Column="0"
                                Width="40"
                                Height="40"
                                Background="#E6E6E6"
                                CornerRadius="20" />
                            <Border
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                Padding="15,10"
                                Background="#EAF6FF"
                                CornerRadius="8">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="#6c757d"
                                    Text="Bình luận dưới tên..." />
                            </Border>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>