                        Background="White"
                        BorderThickness="0"
                        ItemsSource="{Binding FilteredActivities}"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Button
