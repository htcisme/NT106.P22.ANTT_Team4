                                    CommandParameter="{Binding}"
                                    Content="{Binding Title}"
                                    FontSize="13"
                                    FontWeight="Bold"
                                    Foreground="#12305E" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </Popup>
