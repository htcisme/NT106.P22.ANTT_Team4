<Window
    x:Class="DoanKhoaClient.Views.ActivitiesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DoanKhoaClient.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    x:Name="Light_ActivitiesView"
    Title="ActivitiesView"
    Width="1440"
    Height="1036"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="CustomButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF12305E" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--  Style cho sidebar button hover  -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#FFE2F5FF" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#B3E0F7" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ActivityButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFC1D4DE" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E3F2FD" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid
        x:Name="Activities_Background"
        Width="1440"
        Height="1022.8">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Offset="0.596" Color="#FFF6FCFF" />
                <GradientStop Offset="1" Color="#FFDBF3FF" />
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox
            x:Name="Activities_tbSearch"
            Width="307"
            Height="50"
            Margin="370,41,0,0"
            Padding="15,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            Background="#FFDBF3FF"
            BorderBrush="{x:Null}"
            FontSize="17"
            KeyDown="Activities_tbSearch_KeyDown"
            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
        <Popup
            IsOpen="{Binding IsSearchResultOpen, Mode=TwoWay}"
            Placement="Bottom"
            PlacementTarget="{Binding ElementName=Activities_tbSearch}"
            StaysOpen="False">
            <Border
                Width="{Binding ElementName=Activities_tbSearch, Path=ActualWidth}"
                Background="#FFEDF9FF"
                BorderBrush="#CCC"
                BorderThickness="1"
                CornerRadius="5">
                <ListBox
                    MaxHeight="200"
                    Background="White"
                    BorderThickness="0"
                    ItemsSource="{Binding FilteredActivities}"
                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                Padding="10"
                                FontSize="15"
                                Text="{Binding Title}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Popup>
        <ToggleButton
            x:Name="FilterDropdownButton"
            Margin="687,41,706,932"
            Background="#FFDBF3FF"
            BorderBrush="{x:Null}"
            Checked="FilterDropdownButton_Checked"
            Unchecked="FilterDropdownButton_Unchecked">
            <Image
                Width="33"
                Height="33"
                OpacityMask="#FF597CA2"
                Source="/Views/Images/filter.png" />
        </ToggleButton>
        <WrapPanel
            Width="493"
            Height="74"
            Margin="743,46,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <!--  Tag filter đã chọn
            <ItemsControl Margin="10,0,0,0" ItemsSource="{Binding SelectedFilterTags}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="0,0,8,8"
                            Padding="6,2"
                            Background="#FF12305E"
                            CornerRadius="5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,4,0"
                                    Foreground="White"
                                    Text="{Binding}" />
                                <Button
                                    Width="16"
                                    Height="16"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.RemoveFilterTagCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Content="✕"
                                    Foreground="White" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>-->

            <!--  Nút mở dropdown  -->
            <!--  Dropdown filter  -->
            <Popup
                IsOpen="{Binding IsFilterDropdownOpen, Mode=TwoWay}"
                Placement="Bottom"
                PlacementTarget="{Binding ElementName=FilterDropdownButton}"
                StaysOpen="False">
                <Popup.Resources>
                    <Storyboard x:Key="PopupFadeIn">
                        <DoubleAnimation
                            Storyboard.TargetProperty="Opacity"
                            From="0"
                            To="1"
                            Duration="0:0:0.2" />
                    </Storyboard>
                </Popup.Resources>
                <Border
                    Padding="16"
                    Background="#E6F0FA"
                    BorderBrush="#CCC"
                    BorderThickness="1"
                    Loaded="FilterPopupBorder_Loaded">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,8"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="Bộ lọc" />
                        <TextBlock
                            Margin="0,8,0,4"
                            FontWeight="Bold"
                            Text="Loại hoạt động" />
                        <ItemsControl ItemsSource="{Binding ActivityTypeOptions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Display}" IsChecked="{Binding IsChecked, Mode=TwoWay}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Separator Margin="0,8" />
                        <TextBlock
                            Margin="0,8,0,4"
                            FontWeight="Bold"
                            Text="Trạng thái" />
                        <ItemsControl ItemsSource="{Binding ActivityStatusOptions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Display}" IsChecked="{Binding IsChecked, Mode=TwoWay}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Button
                            Margin="0,12,0,0"
                            Command="{Binding ApplyFilterCommand}"
                            Content="Lọc" />
                    </StackPanel>
                </Border>
            </Popup>

        </WrapPanel>
        <Border
            x:Name="Activities_Dashboard"
            Width="288"
            Height="942"
            Margin="43,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            BorderBrush="Black"
            CornerRadius="10,10,10,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0.04" Color="#FFF6FCFF" />
                    <GradientStop Offset="0.46" Color="#FFDBF3FF" />
                    <GradientStop Offset="0.937" Color="#FF87ACCD" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <Image
