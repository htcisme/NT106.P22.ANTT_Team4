            Width="160"
            Height="30"
            Margin="102,354,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Transparent"
            BorderThickness="0"
            Click="SidebarActivitiesButton_Click"
            Cursor="Hand"
            IsEnabled="False"
            Style="{StaticResource SidebarButtonStyle}">
            <StackPanel Orientation="Horizontal">
                <Image
                    x:Name="HomePage_Activities"
                    Width="30"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Views/Images/active-activities.png" />
                <Label
                    x:Name="HomePage_lbActivities"
                    Width="108"
                    Height="30"
                    Margin="30,0,0,0"
                    Padding="0,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Activities"
                    FontFamily="Segoe UI"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#597CA2" />
            </StackPanel>
        </Button>
        <Button
            x:Name="SidebarMemberButton"
            Width="160"
            Height="30"
            Margin="102,432,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Transparent"
            BorderThickness="0"
            Click="SidebarMembersButton_Click"
            Cursor="Hand"
            Style="{StaticResource SidebarButtonStyle}">
            <StackPanel Orientation="Horizontal">
                <Image
                    x:Name="HomePage_Task_iMembers"
                    Width="30"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Views/Images/members.png" />
                <Label
                    x:Name="HomePage_lbMembers"
                    Width="108"
                    Height="30"
                    Margin="30,0,0,0"
                    Padding="0,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Members"
                    FontFamily="Segoe UI"
                    FontSize="20"
                    FontWeight="Bold" />
            </StackPanel>
        </Button>
        <Button
            x:Name="SidebarTaskButton"
            Width="160"
            Height="30"
            Margin="102,510,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Transparent"
            BorderThickness="0"
            Click="SidebarTasksButton_Click"
            Cursor="Hand"
            Style="{StaticResource SidebarButtonStyle}">
            <StackPanel Orientation="Horizontal">
                <Image
                    x:Name="HomePage_iTasks"
                    Width="30"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Views/Images/tasks.png" />
                <Label
                    x:Name="HomePage_lbTasks"
                    Width="108"
                    Height="30"
                    Margin="30,0,0,0"
                    Padding="0,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Tasks"
                    FontFamily="Segoe UI"
                    FontSize="20"
                    FontWeight="Bold" />
            </StackPanel>
        </Button>
        <Image
            x:Name="LightHomePage_iFacebook"
            Width="24"
            Height="24"
            Margin="175,926,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/facebook.png" />
        <Image
            x:Name="LightHomePage_iInstagram"
            Width="24"
            Height="24"
            Margin="135,926,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/instagram.png" />
        <Image
            x:Name="LightHomePage_iYoutube"
            Width="24"
            Height="24"
            Margin="215,926,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/youtube.png" />


        <!--  Main Content Area  -->
        <TextBlock
            Margin="370,120,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="30"
            FontWeight="Bold"
            Foreground="#FF12305E"
            Text="CÁC HOẠT ĐỘNG NỔI BẬT" />

        <TextBlock
            Margin="370,165,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="20"
            Foreground="#597CA2"
            Text="CỦA TUỔI TRẺ MẠNG MÁY TÍNH VÀ TRUYỀN THÔNG" />

        <!--  Featured Activities Cards  -->
        <StackPanel
            Margin="370,230,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <ItemsControl x:Name="FeaturedActivitiesCarousel" ItemsSource="{Binding FeaturedActivities}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Width="190" Margin="0,0,20,0">
                            <Border
                                Width="{Binding Width}"
                                Height="{Binding Height}"
                                HorizontalAlignment="Center"
                                Background="#e6e6e6"
                                CornerRadius="8">
                                <Grid>
                                    <Image
                                        Opacity="{Binding Opacity}"
                                        Source="{Binding ImgUrl}"
                                        Stretch="UniformToFill">
                                        <Image.RenderTransform>
                                            <TranslateTransform X="0" />
                                        </Image.RenderTransform>
                                    </Image>
                                </Grid>
                            </Border>
                            <TextBlock
                                Width="190"
                                Margin="0,8,0,0"
                                HorizontalAlignment="Center"
                                FontSize="17"
                                FontWeight="Bold"
                                Foreground="#FF12305E"
                                Opacity="{Binding Opacity}"
                                Text="{Binding Title}"
                                TextAlignment="Center"
                                TextWrapping="Wrap">
                                <TextBlock.RenderTransform>
                                    <TranslateTransform X="0" />
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </StackPanel>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="Opacity"
                                                To="1"
                                                Duration="0:0:0.4" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="Opacity"
                                                To="0.3"
                                                Duration="0:0:0.4" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!--  Pagination Dots  -->
        <StackPanel
            Margin="650,485,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <ItemsControl ItemsSource="{Binding PaginationDots}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Ellipse
                            Width="10"
                            Height="10"
                            Margin="0,0,5,0"
                            Fill="{Binding Color}">
                            <Ellipse.RenderTransform>
                                <ScaleTransform x:Name="DotScale" ScaleX="1" ScaleY="1" />
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="DotScale"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="1.2"
                                                Duration="0:0:0.3" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="DotScale"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="1.2"
                                                Duration="0:0:0.3" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="DotScale"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="1"
                                                Duration="0:0:0.3" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="DotScale"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="1"
                                                Duration="0:0:0.3" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!--  Latest News Section  -->
        <Border
            Width="370"
            Margin="0,160,42,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            BorderBrush="{x:Null}"
            CornerRadius="10,10,10,10">
            <StackPanel Margin="15">
                <TextBlock
                    Margin="0,0,0,20"
                    Padding="0,8"
                    Background="#FF12305E"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#FFFFFF"
                    Text="TIN TỨC MỚI NHẤT"
                    TextAlignment="Center" />

                <ItemsControl ItemsSource="{Binding LatestActivities}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Command="{Binding DataContext.OpenActivityDetailCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource ActivityButtonStyle}">
                                <StackPanel Margin="10,15,0,15">
                                    <TextBlock
                                        FontSize="15"
                                        FontWeight="Bold"
                                        Foreground="#FF12305E"
                                        Text="{Binding Title}"
                                        TextWrapping="Wrap" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="13"
                                        Foreground="#6c757d"
                                        Text="{Binding Date, StringFormat='{}{0:dddd • dd/MM/yyyy}'}" />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!--  Filter Buttons  -->
        <StackPanel
            Margin="370,520,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <Button
                Width="132"
                Margin="0,0,25,0"
                Padding="15,8"
                Background="#FF12305E"
                BorderThickness="0"
                Content="90 ngày qua"
                FontSize="18"
                FontWeight="Bold"
                Foreground="White"
                Style="{StaticResource CustomButtonStyle}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button
                Width="235"
                Height="40"
                Padding="15,8"
                Background="#FF12305E"
                BorderThickness="0"
                Content="Sắp xếp theo: Ngày"
                FontSize="18"
                FontWeight="Bold"
                Foreground="White"
                Style="{StaticResource CustomButtonStyle}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
        <Border
            Width="1028"
            Height="400"
            Margin="370,372,0,40"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Background="#FFDBF3FF"
            BorderBrush="Black"
            CornerRadius="10,10,10,10" />
        <!--  Bộ lọc hoạt động  -->
        <!--  Activities List  -->
        <Border
            Margin="370,580,42,60"
            Padding="10,10,10,10"
            CornerRadius="10">
            <ScrollViewer Padding="15,25" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Activities}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Command="{Binding DataContext.OpenActivityDetailCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource ActivityButtonStyle}">
                                <Grid Margin="0,15,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                        Grid.Column="0"
                                        Width="60"
                                        Height="60"
                                        ClipToBounds="True"
                                        CornerRadius="5">
                                        <Image Source="{Binding ImgUrl}" Stretch="UniformToFill" />
                                    </Border>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Foreground="#FF12305E"
                                            Text="{Binding Title}"
                                            TextWrapping="Wrap" />
                                        <TextBlock
                                            Margin="0,4,0,0"
                                            FontSize="16"
                                            Foreground="#6c757d"
                                            Text="{Binding Date, StringFormat='{}{0:dddd • dd/MM/yyyy}'}" />
                                    </StackPanel>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>