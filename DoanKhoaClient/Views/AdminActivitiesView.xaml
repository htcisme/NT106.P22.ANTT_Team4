        <!--  Main Content Border  -->
        <Border
            Margin="370,372,42,40"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="#FFDBF3FF"
            BorderBrush="Black"
            CornerRadius="10,10,10,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Tiêu đề và nút tạo mới  -->
                <Grid Grid.Row="0" Margin="20,20,20,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        FontSize="26"
                        FontWeight="Bold"
                        Foreground="#FF12305E"
                        Text="Nội dung" />

                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <CheckBox
                            x:Name="SelectAllCheckBox"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Click="SelectAllCheckBox_Click"
                            IsChecked="{Binding IsAllSelected}"
                            Style="{StaticResource CustomCheckBoxStyle}" />

                        <TextBlock
                            Margin="0,0,20,0"
                            VerticalAlignment="Center"
                            Foreground="#FF12305E"
                            Text="Chọn tất cả" />

                        <Button
                            x:Name="BatchEditButton"
                            Width="80"
                            Margin="0,0,10,0"
                            Click="BatchEditButton_Click"
                            Content="Sửa"
                            IsEnabled="{Binding HasSelectedItems}"
                            Style="{StaticResource EditButtonStyle}"
                            Visibility="{Binding HasSelectedItems, Converter={StaticResource BooleanToVisibilityConverter}}" />

                        <Button
                            x:Name="BatchDeleteButton"
                            Width="80"
                            Margin="0,0,20,0"
                            Click="BatchDeleteButton_Click"
                            Content="Xóa"
                            IsEnabled="{Binding HasSelectedItems}"
                            Style="{StaticResource DeleteButtonStyle}"
                            Visibility="{Binding HasSelectedItems, Converter={StaticResource BooleanToVisibilityConverter}}" />

                        <Button
                            Margin="0,0,20,0"
                            Command="{Binding CreateActivityCommand}"
                            Content="Tạo sự kiện"
                            Style="{StaticResource PrimaryButtonStyle}" />

                        <Button
                            x:Name="timeFilterButton"
                            Margin="0,0,20,0"
                            Content="90 ngày qua"
                            Style="{StaticResource SecondaryButtonStyle}" />
                        <Button
                            x:Name="sortByButton"
                            Content="Sắp xếp theo: Ngày"
                            Style="{StaticResource SecondaryButtonStyle}" />
                    </StackPanel>
                </Grid>

                <!--  Đường kẻ phân cách  -->
                <Rectangle
                    Grid.Row="1"
                    Height="2"
                    Margin="20,0,20,10"
                    Fill="#FF12305E" />

                <!--  Danh sách hoạt động  -->
                <ScrollViewer
                    Grid.Row="2"
                    Margin="20,0,20,20"
                    VerticalScrollBarVisibility="Auto">
                    <ListView
                        x:Name="ActivitiesListView"
                        Background="Transparent"
                        BorderBrush="{x:Null}"
                        ItemsSource="{Binding Activities}"
                        SelectionChanged="ActivitiesListView_SelectionChanged"
                        SelectionMode="Extended">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0,0,0,15" />
                                <Setter Property="Cursor" Value="Hand" />
                                <EventSetter Event="PreviewMouseDown" Handler="ListViewItem_PreviewMouseDown" />
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD" />
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#EBF5FB" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Padding="15"
                                    Background="White"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="70" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="80" />
                                            <ColumnDefinition Width="80" />
                                            <ColumnDefinition Width="80" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Checkbox  -->
                                        <CheckBox
                                            Grid.Column="0"
                                            Margin="0,0,15,0"
                                            VerticalAlignment="Center"
                                            Click="ItemCheckBox_Click"
                                            IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                            Style="{StaticResource CustomCheckBoxStyle}" />

                                        <!--  Hình ảnh hoạt động  -->
                                        <Border
                                            Grid.Column="1"
                                            Width="60"
                                            Height="60"
                                            ClipToBounds="True"
                                            CornerRadius="8">
                                            <Border.Background>
                                                <SolidColorBrush Color="#e6e6e6" />
                                            </Border.Background>
                                            <Image Source="{Binding ImgUrl}" Stretch="UniformToFill" />
                                        </Border>

                                        <!--  Thông tin chính  -->
                                        <StackPanel
                                            Grid.Column="2"
                                            Height="50"
                                            MaxWidth="500"
                                            Margin="15,0,0,0">
                                            <TextBlock
                                                FontSize="18"
                                                FontWeight="Bold"
                                                Foreground="#12305E"
                                                Text="{Binding Title}"
                                                TextWrapping="Wrap" />
                                            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                                <TextBlock
                                                    FontSize="14"
                                                    Foreground="#6c757d"
                                                    Text="{Binding Date, StringFormat={}{0:dd/MM/yyyy}}" />
                                                <TextBlock
                                                    Margin="15,0,0,0"
                                                    FontSize="14"
                                                    Foreground="#6c757d"
                                                    Text="{Binding Type, StringFormat=Loại: {0}}" />
                                                <TextBlock
                                                    Margin="15,0,0,0"
                                                    FontSize="14"
                                                    Foreground="#6c757d"
                                                    Text="{Binding Status, StringFormat=Trạng thái: {0}}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <!--  Nút xem chi tiết  -->
                                        <Button
                                            Grid.Column="3"
                                            Width="60"
                                            Margin="0,0,10,0"
                                            Click="ViewDetailButton_Click"
                                            Content="Xem"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Tag="{Binding}" />

                                        <!--  Nút sửa  -->
                                        <Button
                                            Grid.Column="4"
                                            Margin="0,0,10,0"
                                            Command="{Binding DataContext.EditActivityCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"
                                            Content="Sửa"
                                            Style="{StaticResource EditButtonStyle}" />

                                        <!--  Nút xóa  -->
                                        <Button
                                            Grid.Column="5"
                                            Command="{Binding DataContext.DeleteActivityCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"
                                            Content="Xóa"
                                            Style="{StaticResource DeleteButtonStyle}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>